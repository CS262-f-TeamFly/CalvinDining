<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.calvin.kpb23students.calvindining.fragments.Calendar">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Initial Meal Count"
            android:id="@+id/foodButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo"
            android:id="@+id/undoButton"
            android:layout_gravity="right|bottom"
            android:layout_alignTop="@+id/consumeButton"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="184dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meal(s) eaten"
            android:id="@+id/eatenView"
            android:layout_gravity="right|top"
            app:layout_constraintRight_toLeftOf="@+id/undoButton"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            app:layout_constraintLeft_toRightOf="@+id/foodPDView"
            app:layout_constraintHorizontal_bias="0.14" />

        <EditText
            android:layout_width="92dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/countText"
            android:layout_alignTop="@+id/foodButton"
            android:layout_toRightOf="@+id/foodButton"
            android:layout_toEndOf="@+id/foodButton"
            android:text="0"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/foodButton"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.33"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Meal"
            android:id="@+id/consumeButton"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="184dp" />

        <TextView
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/foodPDView"
            android:layout_gravity="center_horizontal|top"
            android:text="0"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toRightOf="@+id/consumeButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>
